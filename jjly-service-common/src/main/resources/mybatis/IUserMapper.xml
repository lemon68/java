<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jjly.dao.IUserDao">

    <select id="selectAllUser" resultType="user">
        SELECT
        <include refid="basesql"/>
        FROM user u
    </select>
    <!-- 一个vo对应一个sql标签 -->
    <sql id="basesql">
        id as id,login_account as loginAccount,login_password as loginPassword,pay_password as payPassword
    </sql>

    <!-- 	说明:通过id获取实体信息
        匹配条件: @param id 实体的id
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="get" resultType="bank">
        SELECT
        <include refid="base_sql" />
        FROM dzq_finance_bank WHERE id=#{id}
    </select>
    <!-- 说明:单表下通过匹配条件查询数据，
        匹配条件:
        @param queryBuilder 查询条件。
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="findAll" resultType="bank">
        SELECT
        <include refid="base_sql" />
        FROM user
        <if test="queryBuilder!=null">
            <where>
                <foreach collection="queryBuilder.andList"  item="val" separator="and">

                    <choose>
                        <when test="val!=null and (val.operator.toString() == 'LIKE' or val.operator.toString()== 'NLIKE')">
                            ${val.columnName} ${val.operator.op} "%"#{val.value}"%"
                        </when>
                        <otherwise>
                            ${val.columnName} ${val.operator.op} #{val.value}
                        </otherwise>
                    </choose>

                </foreach>
            </where>
        </if>
    </select>
    <!-- 说明:单表下通过匹配条件查询数据，并且可以进行分页和排序操作
        匹配条件:
        @param queryBuilder 查询条件。
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="findAllAndPage" resultType="bank">
        SELECT
        <include refid="base_sql" />
        FROM user
        <if test="queryBuilder!=null">
            <where>
                <foreach collection="queryBuilder.andList"  item="val" separator="and">

                    <choose>
                        <when test="val!=null and (val.operator.toString() == 'LIKE' or val.operator.toString()== 'NLIKE')">
                            ${val.columnName} ${val.operator.op} "%"#{val.value}"%"
                        </when>
                        <otherwise>
                            ${val.columnName} ${val.operator.op} #{val.value}
                        </otherwise>
                    </choose>

                </foreach>
            </where>
        </if>
    </select>
    <!-- 说明:单表下通过匹配条件查询数据
        匹配条件:
        @param queryBuilder 查询条件。
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="findAllByQB" parameterType="org.yun.framework.orm.QueryBuilder" resultType="bank">
        SELECT
        <include refid="base_sql" />
        FROM user
        <if test="queryBuilder!=null">
            <where>
                <foreach collection="queryBuilder.andList"  item="val" separator="and">

                    <choose>
                        <when test="val!=null and (val.operator.toString() == 'LIKE' or val.operator.toString()== 'NLIKE')">
                            ${val.columnName} ${val.operator.op} "%"#{val.value}"%"
                        </when>
                        <otherwise>
                            ${val.columnName} ${val.operator.op} #{val.value}
                        </otherwise>
                    </choose>
                </foreach>
            </where>
        </if>
    </select>
    <!-- 说明:单表下通过匹配条件查询数据，并且可以进行排序
        匹配条件:
        @param queryBuilder 查询条件。
        @param orders 排序字段的list。如果为空就不生成排序语句
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="findAllAndOrder" resultType="bank">
        SELECT
        <include refid="base_sql" />
        FROM user
        <if test="queryBuilder!=null">
            <where>
                <foreach collection="queryBuilder.andList"  item="val" separator="and">

                    <choose>
                        <when test="val!=null and (val.operator.toString() == 'LIKE' or val.operator.toString()== 'NLIKE')">
                            ${val.columnName} ${val.operator.op} "%"#{val.value}"%"
                        </when>
                        <otherwise>
                            ${val.columnName} ${val.operator.op} #{val.value}
                        </otherwise>
                    </choose>

                </foreach>
            </where>
        </if>
        <if test="orders!=null and orders.size!=0">
            order by
            <foreach collection="orders"  item="val" separator=",">
                <if test="val!=null">
                    ${val}
                </if>
            </foreach>
        </if>
    </select>

    <!-- 说明:统计条数
        匹配条件:
        @param queryBuilder 查询条件。如果没有则返回全表记录数
        返回字段： 全部（如果有特殊构造的字段要添加字段说明） -->
    <select id="count" resultType="long">
        SELECT
        count(*)
        FROM user
        <if test="queryBuilder!=null">
            <where>
                <foreach collection="queryBuilder.andList"  item="val" separator="and">

                    <choose>
                        <when test="val!=null and (val.operator.toString() == 'LIKE' or val.operator.toString()== 'NLIKE')">
                            ${val.columnName} ${val.operator.op} "%"#{val.value}"%"
                        </when>
                        <otherwise>
                            ${val.columnName} ${val.operator.op} #{val.value}
                        </otherwise>
                    </choose>
                </foreach>
            </where>
        </if>
    </select>
</mapper>